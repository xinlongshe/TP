    .cbtn::before {
        top: 0;
        right: 0;
    }

    .cbtn::after {
        bottom: 0;
        left: 0;
    }

    .cbtn:hover::before,
    .cbtn:hover::after {
        height: 100%;
    }

    .cbtn span::before,
    .cbtn span::after {
