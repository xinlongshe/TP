<body>

    <center>
        <h1>@ViewData["Title"]</h1>

        <b>hi,welcome to TrainerPro, Please register your account here</b>

        <div id="app" class="banners-container">
            <div class="banner" style="background-image: url('../img/bluegradient.jpg');">
                <article class="banner">
                    <section class="banner-copy">
                        <h1>Are you a trainer?</h1>
                        <br />
                        <h6>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco.</h6>
                        <br />
                        <a href="/register_trainer" class="button">Setup your account</a>
                    </section>
                </article>
            </div>

            <form method="post">
                <table>
                    <tr>
                        <td height="50px">Username:<font color="red">*</font></td>
                        <td>
                            <input class="mytxt" type="text" id="oText" asp-for="User.Username" placeholder="Enter User Name Here" />
                            <span asp-validation-for="User.Username" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td height="50px">Password:<font color="red">*</font></td>
                        <td>
                            <input class="mytxt" type="password" asp-for="User.Password" placeholder="Enter Password Here" />
                        </td>
                    </tr>

                    <tr>
                        <td height="50px">Gender:<font color="red">*</font></td>
                        <td>
                            <input type="radio" v-on:click="GenderChange" name="gender" value="Male" />Male
                            <input type="radio" v-on:click="GenderChange" name="gender" value="Femail" />Femail
                            <input type="radio" v-on:click="GenderChange" name="gender" value="Others" />Others
                            <input id="Hidden1" asp-for="Trainee.Gender" type="hidden" />
                            <span asp-validation-for="Trainee.Gender" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td height="50px">Phone:(optional)</td>
                        <td>
                            <select id="codeSelect" v-on:change="selectFn($event)">
                                <option selected value="+61">+61</option>
                                <option value="+51">+51</option>
                                <option value="+41">+41</option>
                                <option value="+31">+31</option>
                                <option value="+21">+21</option>
                            </select>

                            <input id="traineePhone" v-on:change="phoneChage" class="mytxt" type="text" placeholder="Enter Your Number Here" />
                            <input id="Hidden3" asp-for="Trainee.Phone" type="hidden" />
                            <span asp-validation-for="Trainee.Phone" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td height="50px">i am interesting in:<font color="red">*</font></td>
                        <td>
                            <input class="interesting" type="checkbox" v-on:click="InterestingChange" value="Health" />Health
                            <input class="interesting" type="checkbox" v-on:click="InterestingChange" value="Education" />Education
                            <input class="interesting" type="checkbox" v-on:click="InterestingChange" value="Arts" />Arts
                            <input class="interesting" type="checkbox" v-on:click="InterestingChange" value="Sports" />Sports
                            <input class="interesting" type="checkbox" v-on:click="InterestingChange" value="Business" />Business
                            <input class="interesting" id="Hidden2" asp-for="Trainee.Interesting" type="hidden" />
                            <span asp-validation-for="Trainee.Interesting" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td height="50px">Location:(optional)</td>
                        <td>

                            <input class="mytxt" type="text" asp-for="Trainee.Location" placeholder="Enter Your Location Here" />
                            @*<span asp-validation-for="Trainee.Location" class="text-danger"></span>*@

                        </td>
                    </tr>

                    <tr>
                        <td height="50px">Email:<font color="red">*</font></td>
                        <td>

                            <input class="mytxt" type="text" asp-for="Trainee.Email" placeholder="Enter Your Email Here" />
                            <span asp-validation-for="Trainee.Email" class="text-danger"></span>
                        </td>

                    </tr>

                    <tr>
                        <td></td>
                        <td>
                            We'll send a confirmation code to your email.<input id="btn" type="button" v-on:click="Continue" value="Continue" /> @*<button v-on:click="Continue">Continue</button>*@
                        </td>

                    </tr>

                    <tr>
                        <td height="50px">code:<font color="red">*</font></td>
                        <td>
                            <input class="mytxt" type="text" asp-for="emailCode.ValueCode" placeholder="Enter Your Code Here" />
                            <span asp-validation-for="emailCode.ValueCode" class="text-danger"></span>
                            <input id="Hidden5" type="hidden" asp-for="emailCode.SentCode" />
                        </td>
                    </tr>

                    <tr align="center">
                        <td colspan="2" height="50px">
                            <input type="checkbox" id="agreement" name="agreement" v-on:click="agreementChange" />
                            <label for="agreement" style=" color:red;">I agree all the agreement</label>
                        </td>
                    </tr>

                    <tr>
                        <td height="50px">
                            <input id="savebtn" disabled="true" type="submit" asp-page-handler="Save" name="submit_register" value="Create" />
                        </td>

                        <td>
                            Already have a account!<a href="login_trainee">Login</a>
                        </td>
                    </tr>

                </table>
            </form>
    </center>

    <script src="~/js/vue.js"></script>

    <script>
        new Vue({
            el: '#app',
            data: {
                message: ''
            },
            methods: {
                Continue: function () {
                    //formaction = "/Student/Add?handler=OnPostSendEmail"
                    $.ajax({
                        url: "register_trainee?handler=SendEmail",
                        method: "Post",
                        data: JSON.stringify($("#Trainee_Email").val()),
                        contentType: "application/json;charset=UTF-8",
                        dataType: "json",
                        success: function (data) {
                            if (data) {
                                $("#Hidden5").val(data.Code);
                                alert(data.Mes);
                            }
                        },
                        error: function () {

                        }
                    });
                },
                InterestingChange: function () {
                    var spCodesTemp = "";
                    $('.interesting:input:checkbox:checked').each(function (i) {
                        if (0 == i) {
                            spCodesTemp = $(this).val();
                        } else {
                            spCodesTemp += ("," + $(this).val());
                        }
                    });
                    $("#Hidden2").val(spCodesTemp);
                },
                GenderChange: function () {
                    var gender = $('input[name="gender"]:checked ').val();
                    $("#Hidden1").val(gender);
                },
                selectFn: function (e) {
                    //var code = $('#testSelect option:selected').text();
                    var phone = $("#traineePhone").val();
                    $("#Hidden3").val(e.target.value + phone);
                },
                phoneChage: function () {
                    var code = $('#codeSelect option:selected').text();
                    var phone = $("#traineePhone").val();
                    $("#Hidden3").val(code + phone);
                },
                agreementChange: function () {
                    var isChecked = $('#agreement').prop('checked');
                    if (isChecked) {
                        $("#savebtn").attr("disabled", false);
                    }
                    else {
                        $("#savebtn").attr("disabled", true);
                    }
                }
            },
            mounted: function () {

                // $("#savebtn").attr("disabled", true);
            },
            //created: function (){
            //    alert(222);
            //}

        })
    </script>
</body>